# ------------------------------------------------------------
# üåê GOODIES PLATFORM ‚Äî PRODUCTION ENVIRONMENT CONFIGURATION
# ------------------------------------------------------------

# --- Core Server ---
NODE_ENV=production
PORT=8080
CLIENT_URL=https://goodies.app
MAINTENANCE_MODE=false

# --- MongoDB ---
MONGO_URI=mongodb://127.0.0.1:27017/goodies

# --- JWT / Session Security ---
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# --- Stripe (Production Keys) ---
STRIPE_SECRET_KEY=sk_live_your_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# --- PayPal (Production Credentials) ---
PAYPAL_CLIENT_ID=live_client_id_here
PAYPAL_CLIENT_SECRET=live_client_secret_here

# --- OAuth Providers (Production) ---
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

APPLE_CLIENT_ID=your_apple_client_id
APPLE_CLIENT_SECRET=your_apple_client_secret

FACEBOOK_CLIENT_ID=your_facebook_client_id
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret

# --- Email (Nodemailer / Gmail App Password) ---
MAIL_USER=youremail@gmail.com
MAIL_PASS=your_app_password_here
MAIL_SERVICE=gmail
MAIL_FROM="Goodies Support <youremail@gmail.com>"

# --- Admin Access (Maintenance / API Auth) ---
ADMIN_KEY=supersecureadminkey123

# --- Analytics & Logging ---
LOG_LEVEL=info
ENABLE_REQUEST_LOGS=true
